<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!--    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping> !-->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.auth.RegisterController</servlet-class>
        <init-param>
            <param-name>defaultRole</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ForgotPwdController</servlet-name>
        <servlet-class>controller.auth.ForgotPwdController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutController</servlet-name>
        <servlet-class>controller.auth.LogOutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyOTPController</servlet-name>
        <servlet-class>controller.auth.VerifyOTPController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordController</servlet-name>
        <servlet-class>controller.auth.ResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestAddressDAOServlet</servlet-name>
        <servlet-class>controller.TestAddressDAOServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestDBConnectionServlet</servlet-name>
        <servlet-class>controller.TestDBConnectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DistrictsApiServlet</servlet-name>
        <servlet-class>controller.api.DistrictsApiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WardsApiServlet</servlet-name>
        <servlet-class>controller.api.WardsApiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FullAddressApiServlet</servlet-name>
        <servlet-class>controller.api.FullAddressApiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProvincesApiServlet</servlet-name>
        <servlet-class>controller.api.ProvincesApiServlet</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPwdController</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyOTPController</servlet-name>
        <url-pattern>/verify-otp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordController</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestAddressDAOServlet</servlet-name>
        <url-pattern>/test-address-dao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestDBConnectionServlet</servlet-name>
        <url-pattern>/test-db-connection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DistrictsApiServlet</servlet-name>
        <url-pattern>/api/districts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WardsApiServlet</servlet-name>
        <url-pattern>/api/wards</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FullAddressApiServlet</servlet-name>
        <url-pattern>/api/full-address</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProvincesApiServlet</servlet-name>
        <url-pattern>/api/provinces</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>  <!-- Session timeout in minutes -->
    </session-config>
</web-app>
